{
  "manifest_version": 2,
  "name": "Pentaho Sidekicks",
  "description": "Google Chrome extension to add some features and tweaks to Pentaho, like building heat maps over Saiku Analytics reports",
  "version": "0.0.0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/pentaho/Home", "*://*/pentaho/Home?*"],
      "js": ["freeze.js", "heatmap.js", "chroma.min.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "contextMenus", "storage"]
}
